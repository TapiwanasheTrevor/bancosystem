                        "required": false
                    },
                    {
                        "label": "Permanent Address",
                        "type": "textarea",
                        "required": true
                    },
                    {
                        "label": "Property Ownership",
                        "type": "radio",
                        "options": [
                            "Owned",
                            "Employer Owned",
                            "Rented",
                            "Mortgaged",
                            "Parents Owned"
                        ],
                        "required": true
                    },
                    {
                        "label": "Period at Current Address",
                        "type": "select",
                        "options": [
                            "Less than One Year",
