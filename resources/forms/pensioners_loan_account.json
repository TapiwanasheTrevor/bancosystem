{
    "form": {
        "sections": [
            {
                "title": "Customer Personal Details",
                "fields": [
                    {
                        "label": "Title",
                        "type": "select",
                        "options": [
                            "Mr",
                            "Mrs",
                            "Miss"
                        ],
                        "required": true
                    },
                    {
                        "label": "Surname",
                        "type": "text",
                        "required": true
                    },
                    {
                        "label": "First Name",
                        "type": "text",
                        "required": true
                    },
                    {
                        "label": "Gender",
                        "type": "radio",
                        "options": [
                            "Male",
                            "Female"
                        ],
                        "required": true
                    },
                    {
                        "label": "Date of Birth",
                        "type": "date",
                        "required": true
                    },
                    {
                        "label": "Marital Status",
                        "type": "select",
                        "options": [
                            "Single",
                            "Married",
                            "Divorced",
                            "Widowed"
                        ],
                        "required": true
                    },
                    {
                        "label": "Nationality",
                        "type": "text",
